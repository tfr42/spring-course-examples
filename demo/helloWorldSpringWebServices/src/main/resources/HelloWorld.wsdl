<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<wsdl:definitions xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
	xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:tns="http://seminar.gfu.net/springws/helloworld"
	targetNamespace="http://seminar.gfu.net/springws/helloworld"
	xmlns:xsd1="http://seminar.gfu.net/springws/helloworld/types"
	xmlns:xsd2="http://seminar.gfu.net/springws/helloworld/faults"
	name="HelloWorldService">
	<wsdl:documentation>HelloWorld contract-first web service using Spring WS </wsdl:documentation>
	<wsdl:types>
		<xsd:schema>
			<xsd:import namespace="http://seminar.gfu.net/springws/helloworld/types"
						schemaLocation="types.xsd"/>
			<xsd:import namespace="http://seminar.gfu.net/springws/helloworld/faults"
						schemaLocation="faults.xsd"/>
		</xsd:schema>
	</wsdl:types>
	<wsdl:message name="sayHelloToRequest">
		<wsdl:part element="xsd1:helloRequest" name="namemessage" />
	</wsdl:message>
	<wsdl:message name="sayHelloToResponse">
		<wsdl:part element="xsd1:helloResponse" name="greetingmessage" />
	</wsdl:message>
	<wsdl:message name="sayHelloToFault">
		<wsdl:part element="xsd2:inputMessageValidationFault" name="faultmessage"/>
	</wsdl:message>
	<wsdl:portType name="HelloWorld">
		<wsdl:operation name="sayHelloTo">
			<wsdl:input message="tns:sayHelloToRequest" name="request"/>
			<wsdl:output message="tns:sayHelloToResponse" name="response"/>
			<wsdl:fault  message="tns:sayHelloToFault" name="fault"/>
		</wsdl:operation>
	</wsdl:portType>
	<wsdl:binding name="HelloWorldSOAP" type="tns:HelloWorld">
		<soap:binding style="document"
			transport="http://schemas.xmlsoap.org/soap/http" />
		<wsdl:operation name="sayHelloTo">
			<soap:operation soapAction="http://seminar.gfu.net/springws/helloworld/sayHelloTo" />
			<wsdl:input name="request">
				<soap:body use="literal" />
			</wsdl:input>
			<wsdl:output name="response">
				<soap:body use="literal" />
			</wsdl:output>
			<wsdl:fault name="fault">
				<soap:fault use="literal" name="fault"/>			
			</wsdl:fault>
		</wsdl:operation>
	</wsdl:binding>
	<wsdl:service name="HelloWorldService">
		<wsdl:port binding="tns:HelloWorldSOAP" name="HelloWorldSOAP">
			<soap:address
				location="http://localhost:48080/helloWorldSpringWebServices/HelloWorldService" />
		</wsdl:port>
	</wsdl:service>
</wsdl:definitions>
